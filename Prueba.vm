// Programa de prueba general para traductor VM → ASM
// Comprueba push/pop, aritmética, etiquetas y funciones

// ----- Setup inicial -----
push constant 10     // 10
push constant 5      // 5
add                  // 10 + 5 = 15
pop local 0          // local 0 = 15

// ----- Prueba condicional -----
push local 0         // 15
push constant 20     // 20
lt                   // ¿15 < 20? → true (-1)
if-goto LESS
goto NOT_LESS

label LESS
  push constant 111  // valor si fue menor
  pop temp 0
  goto CONTINUE

label NOT_LESS
  push constant 222  // valor si no fue menor
  pop temp 0

label CONTINUE

// ----- Llamada a función -----
push constant 3
push constant 4
call AddTwo 2        // Llama función AddTwo con 2 argumentos
pop static 0         // Guarda el resultado en static 0

// Fin del programa principal
label END
goto END

// ----- Definición de función -----
function AddTwo 0
  push argument 0
  push argument 1
  add
  return
